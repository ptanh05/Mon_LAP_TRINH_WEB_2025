@model Thực_hành_model.Models.Product
@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2>Xóa sản phẩm</h2>
<h3>Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Tên sản phẩm:</dt>
        <dd class="col-sm-9">@Model.Name</dd>
        
        <dt class="col-sm-3">Mô tả:</dt>
        <dd class="col-sm-9">@Model.Description</dd>
        
        <dt class="col-sm-3">Giá:</dt>
        <dd class="col-sm-9">@Model.Price.ToString("N0") VNĐ</dd>
        
        <dt class="col-sm-3">Số lượng:</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>
        
        <dt class="col-sm-3">Ngày tạo:</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
