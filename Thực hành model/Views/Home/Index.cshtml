@model IEnumerable<Thực_hành_model.Models.Product>
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="text-center">
    <h1 class="display-4">Chào mừng đến với cửa hàng</h1>
    <p class="lead">Khám phá các sản phẩm tuyệt vời của chúng tôi</p>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <h2>Sản phẩm nổi bật</h2>
        <div class="row">
            @foreach (var product in Model.Take(3))
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text">
                                <strong>Giá: @product.Price.ToString("N0") VNĐ</strong>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">Còn lại: @product.Quantity sản phẩm</small>
                            </p>
                        </div>
                        <div class="card-footer">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-3">
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">Xem tất cả sản phẩm</a>
        </div>
    </div>
</div>