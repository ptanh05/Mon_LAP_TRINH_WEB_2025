@model StudentManagement.Models.ClassSection

@{
    ViewData["Title"] = "Xóa Lớp học phần";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-trash"></i> Xóa Lớp học phần</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="alert alert-danger" role="alert">
                        <h5 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Cảnh báo!</h5>
                        <p class="mb-0">Bạn có chắc chắn muốn xóa lớp học phần này? Hành động này không thể hoàn tác.</p>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0"><i class="fas fa-chalkboard"></i> Thông tin Lớp học phần sẽ bị xóa</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-sm-4 fw-bold">Mã lớp:</div>
                                <div class="col-sm-8">
                                    <span class="badge bg-primary">@Model.SectionCode</span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-4 fw-bold">Khóa học:</div>
                                <div class="col-sm-8">@Model.Course.Title</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-4 fw-bold">Giảng viên:</div>
                                <div class="col-sm-8">@Model.Instructor.FullName</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-4 fw-bold">Sức chứa:</div>
                                <div class="col-sm-8">@Model.CurrentEnrollment/@Model.MaxCapacity</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-4 fw-bold">Phòng học:</div>
                                <div class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Room))
                                    {
                                        @Model.Room
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-4 fw-bold">Lịch học:</div>
                                <div class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Schedule))
                                    {
                                        @Model.Schedule
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-4 fw-bold">Thời gian:</div>
                                <div class="col-sm-8">
                                    <div>
                                        <div><strong>Bắt đầu:</strong> @Model.StartDate.ToString("dd/MM/yyyy")</div>
                                        <div><strong>Kết thúc:</strong> @Model.EndDate.ToString("dd/MM/yyyy")</div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-4 fw-bold">Trạng thái:</div>
                                <div class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Không hoạt động</span>
                                    }
                                </div>
                            </div>

                            @if (Model.Enrollments.Any())
                            {
                                <div class="alert alert-warning mt-3" role="alert">
                                    <h6 class="alert-heading"><i class="fas fa-exclamation-circle"></i> Lưu ý quan trọng</h6>
                                    <p class="mb-2">Lớp học phần này đang có <strong>@Model.Enrollments.Count()</strong> sinh viên đăng ký:</p>
                                    <ul class="mb-0">
                                        @foreach (var enrollment in Model.Enrollments.Take(3))
                                        {
                                            <li>@enrollment.Student.Name - @enrollment.Status</li>
                                        }
                                        @if (Model.Enrollments.Count() > 3)
                                        {
                                            <li>... và @(Model.Enrollments.Count() - 3) sinh viên khác</li>
                                        }
                                    </ul>
                                    <p class="mb-0 mt-2"><strong>Không thể xóa lớp học phần đang có sinh viên đăng ký!</strong></p>
                                </div>
                            }
                        </div>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                            @if (!Model.Enrollments.Any(e => e.Status == "Active"))
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Xác nhận xóa
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-danger" disabled>
                                    <i class="fas fa-ban"></i> Không thể xóa
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
