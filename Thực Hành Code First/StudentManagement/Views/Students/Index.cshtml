@model StudentManagement.Models.StudentListViewModel

@{
    ViewData["Title"] = "Danh sách Sinh viên";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-users"></i> Quản lý Sinh viên
                    </h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm Sinh viên Mới
                    </a>
                </div>
                <div class="card-body">
                    <form method="get" class="row g-2 mb-3">
                        <div class="col-md-4">
                            <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Tìm theo tên hoặc email" />
                        </div>
                        <div class="col-md-6">
                            <a asp-action="ExportCsv" asp-route-search="@Model.Search" class="btn btn-outline-secondary">
                                <i class="fas fa-file-csv"></i> Xuất CSV
                            </a>
                        </div>
                        <div class="col-md-2 text-end">
                            <button class="btn btn-primary w-100" type="submit"><i class="fas fa-search"></i> Tìm</button>
                        </div>
                    </form>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Students.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>
                                            <a asp-action="Index" asp-route-search="@Model.Search" asp-route-sortBy="name" asp-route-sortDir="@(Model.SortBy=="name" && Model.SortDir!="desc" ? "desc" : "asc")">Tên</a>
                                        </th>
                                        <th>
                                            <a asp-action="Index" asp-route-search="@Model.Search" asp-route-sortBy="email" asp-route-sortDir="@(Model.SortBy=="email" && Model.SortDir!="desc" ? "desc" : "asc")">Email</a>
                                        </th>
                                        <th>
                                            <a asp-action="Index" asp-route-search="@Model.Search" asp-route-sortBy="birthdate" asp-route-sortDir="@(Model.SortBy=="birthdate" && Model.SortDir!="desc" ? "desc" : "asc")">Ngày sinh</a>
                                        </th>
                                        <th>Điện thoại</th>
                                        <th>Số khóa học</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Students)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                            </td>
                                            <td>
                                                <a href="mailto:@item.Email" class="text-decoration-none">
                                                    @Html.DisplayFor(modelItem => item.Email)
                                                </a>
                                            </td>
                                            <td>
                                                @item.BirthDate.ToString("dd/MM/yyyy")
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.PhoneNumber))
                                                {
                                                    <a href="tel:@item.PhoneNumber" class="text-decoration-none">
                                                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa cập nhật</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    @item.Enrollments.Count khóa học
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-danger" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <nav>
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-search="@Model.Search" asp-route-sortBy="@Model.SortBy" asp-route-sortDir="@Model.SortDir" asp-route-page="@(Model.Page-1)" asp-route-pageSize="@Model.PageSize">Trang trước</a>
                                </li>
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.Page ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-search="@Model.Search" asp-route-sortBy="@Model.SortBy" asp-route-sortDir="@Model.SortDir" asp-route-page="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                                    </li>
                                }
                                <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-search="@Model.Search" asp-route-sortBy="@Model.SortBy" asp-route-sortDir="@Model.SortDir" asp-route-page="@(Model.Page+1)" asp-route-pageSize="@Model.PageSize">Trang sau</a>
                                </li>
                            </ul>
                        </nav>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">Chưa có sinh viên nào</h4>
                            <p class="text-muted">Hãy thêm sinh viên đầu tiên để bắt đầu quản lý.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Thêm Sinh viên Đầu tiên
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide success message after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
