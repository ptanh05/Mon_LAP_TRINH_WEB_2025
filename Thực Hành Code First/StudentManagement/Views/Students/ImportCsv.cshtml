@{
    ViewData["Title"] = "Import CSV Sinh viên";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-file-import"></i> Import Sinh viên từ CSV
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["WarningMessage"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["WarningMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="ImportCsv" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label for="file" class="form-label">Chọn file CSV *</label>
                            <input type="file" name="file" class="form-control" accept=".csv" required />
                            <div class="form-text">Chỉ chấp nhận file có định dạng .csv</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-upload"></i> Import CSV
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i> Hướng dẫn
                    </h5>
                </div>
                <div class="card-body">
                    <h6>Định dạng CSV:</h6>
                    <p class="text-muted">File CSV phải có cấu trúc như sau:</p>
                    <div class="bg-light p-2 rounded">
                        <code>
                            Name,Email,BirthDate,PhoneNumber,Address<br>
                            "Nguyễn Văn A","a@email.com","2000-01-01","0123456789","Hà Nội"<br>
                            "Trần Thị B","b@email.com","2001-02-02","0987654321","TP.HCM"
                        </code>
                    </div>
                    
                    <h6 class="mt-3">Yêu cầu:</h6>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Dòng đầu tiên là header</li>
                        <li><i class="fas fa-check text-success"></i> Email phải duy nhất</li>
                        <li><i class="fas fa-check text-success"></i> Ngày sinh định dạng: yyyy-MM-dd</li>
                        <li><i class="fas fa-check text-success"></i> PhoneNumber và Address là tùy chọn</li>
                    </ul>

                    <h6 class="mt-3">Lưu ý:</h6>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-exclamation-triangle text-warning"></i> Email trùng sẽ bị bỏ qua</li>
                        <li><i class="fas fa-exclamation-triangle text-warning"></i> Dòng lỗi sẽ được báo cáo</li>
                        <li><i class="fas fa-exclamation-triangle text-warning"></i> Chỉ import dữ liệu hợp lệ</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide messages after 10 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 10000);
    </script>
}
