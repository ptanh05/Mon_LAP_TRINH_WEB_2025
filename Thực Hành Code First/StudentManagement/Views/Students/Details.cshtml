@model StudentManagement.Models.Student

@{
    ViewData["Title"] = "Chi tiết Sinh viên";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user"></i> Chi tiết Sinh viên
                    </h3>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3">Thông tin Cá nhân</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold">@Html.DisplayNameFor(model => model.Name):</td>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">@Html.DisplayNameFor(model => model.Email):</td>
                                    <td>
                                        <a href="mailto:@Model.Email" class="text-decoration-none">
                                            @Html.DisplayFor(model => model.Email)
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">@Html.DisplayNameFor(model => model.BirthDate):</td>
                                    <td>@Model.BirthDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">@Html.DisplayNameFor(model => model.PhoneNumber):</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                        {
                                            <a href="tel:@Model.PhoneNumber" class="text-decoration-none">
                                                @Html.DisplayFor(model => model.PhoneNumber)
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa cập nhật</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">@Html.DisplayNameFor(model => model.Address):</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Address))
                                        {
                                            @Html.DisplayFor(model => model.Address)
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa cập nhật</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3">Khóa học Đã Đăng ký</h5>
                            <div class="mb-2">
                                <span class="badge bg-dark">GPA: @(((double?)ViewBag.GPA)?.ToString("F2") ?? "0.00")</span>
                                <a asp-action="ExportTranscriptCsv" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary ms-2">
                                    <i class="fas fa-file-csv"></i> Xuất bảng điểm CSV
                                </a>
                            </div>
                            @if (Model.Enrollments.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Mã khóa học</th>
                                                <th>Tên khóa học</th>
                                                <th>Giữa kỳ</th>
                                                <th>Cuối kỳ</th>
                                                <th>Bài tập</th>
                                                <th>Điểm</th>
                                                <th>Điểm chữ</th>
                                                <th>Trạng thái</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var enrollment in Model.Enrollments)
                                            {
                                                <tr>
                                                    <td>
                                                        <span class="badge bg-secondary">
                                                            @enrollment.Course.CourseCode
                                                        </span>
                                                    </td>
                                                    <td>@enrollment.Course.Title</td>
                                                    <td>@(enrollment.MidtermGrade?.ToString("F1") ?? "-")</td>
                                                    <td>@(enrollment.FinalGrade?.ToString("F1") ?? "-")</td>
                                                    <td>@(enrollment.AssignmentGrade?.ToString("F1") ?? "-")</td>
                                                    <td>
                                                        @if (enrollment.Grade.HasValue)
                                                        {
                                                            <span class="badge bg-success">
                                                                @enrollment.Grade.Value.ToString("F1")
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">Chưa có điểm</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-info">@enrollment.GetGradeLetter()</span>
                                                    </td>
                                                    <td>
                                                        @switch (enrollment.Status)
                                                        {
                                                            case "Active":
                                                                <span class="badge bg-primary">Đang học</span>
                                                                break;
                                                            case "Completed":
                                                                <span class="badge bg-success">Hoàn thành</span>
                                                                break;
                                                            case "Dropped":
                                                                <span class="badge bg-danger">Bỏ học</span>
                                                                break;
                                                            default:
                                                                <span class="badge bg-secondary">@enrollment.Status</span>
                                                                break;
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-3">
                                    <i class="fas fa-book fa-2x text-muted mb-2"></i>
                                    <p class="text-muted mb-0">Sinh viên chưa đăng ký khóa học nào</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
