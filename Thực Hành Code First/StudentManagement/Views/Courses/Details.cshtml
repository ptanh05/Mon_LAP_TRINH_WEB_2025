@model StudentManagement.Models.Course

@{
    ViewData["Title"] = "Chi tiết Khóa học";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-book"></i> Chi tiết Khóa học
                    </h4>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Mã khóa học:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary fs-6">@Html.DisplayFor(model => model.CourseCode)</span>
                        </dd>

                        <dt class="col-sm-3">Tên khóa học:</dt>
                        <dd class="col-sm-9">
                            <strong>@Html.DisplayFor(model => model.Title)</strong>
                        </dd>

                        <dt class="col-sm-3">Số tín chỉ:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info fs-6">@Html.DisplayFor(model => model.Credits) tín chỉ</span>
                        </dd>

                        <dt class="col-sm-3">Mô tả:</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Html.DisplayFor(model => model.Description)
                            }
                            else
                            {
                                <span class="text-muted">Chưa có mô tả</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            @if (Model.Enrollments.Any())
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-users"></i> Danh sách Sinh viên Đăng ký (@Model.Enrollments.Count)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Sinh viên</th>
                                        <th>Email</th>
                                        <th>Ngày đăng ký</th>
                                        <th>Điểm</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var enrollment in Model.Enrollments)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-controller="Students" asp-action="Details" asp-route-id="@enrollment.StudentId" class="text-decoration-none">
                                                    @enrollment.Student.Name
                                                </a>
                                            </td>
                                            <td>@enrollment.Student.Email</td>
                                            <td>@enrollment.EnrollmentDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @if (enrollment.Grade.HasValue)
                                                {
                                                    <span class="badge bg-success">@enrollment.Grade.Value.ToString("F1")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa có điểm</span>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    var statusClass = enrollment.Status switch
                                                    {
                                                        "Active" => "bg-primary",
                                                        "Completed" => "bg-success",
                                                        "Withdrawn" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @statusClass">@enrollment.Status</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card mt-4">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Chưa có sinh viên nào đăng ký</h5>
                        <p class="text-muted">Khóa học này chưa có sinh viên đăng ký.</p>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar"></i> Thống kê
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h3 class="text-primary">@Model.Enrollments.Count</h3>
                            <small class="text-muted">Sinh viên đăng ký</small>
                        </div>
                        <div class="col-6">
                            <h3 class="text-success">@Model.Credits</h3>
                            <small class="text-muted">Tín chỉ</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
