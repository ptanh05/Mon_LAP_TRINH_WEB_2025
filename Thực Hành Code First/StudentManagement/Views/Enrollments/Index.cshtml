@model IEnumerable<StudentManagement.Models.Enrollment>

@{
    ViewData["Title"] = "Danh sách Đăng ký Khóa học";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-clipboard-list"></i> Quản lý Đăng ký Khóa học
                    </h3>
                    <a asp-action="Create" class="btn btn-warning">
                        <i class="fas fa-plus"></i> Thêm Đăng ký Mới
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Sinh viên</th>
                                        <th>Khóa học</th>
                                        <th>Ngày đăng ký</th>
                                        <th>Điểm</th>
                                        <th>Trạng thái</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@item.Student.Name</strong><br>
                                                    <small class="text-muted">@item.Student.Email</small>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <span class="badge bg-primary">@item.Course.CourseCode</span><br>
                                                    <small>@item.Course.Title</small>
                                                </div>
                                            </td>
                                            <td>
                                                @item.EnrollmentDate.ToString("dd/MM/yyyy")
                                            </td>
                                            <td>
                                                @if (item.Grade.HasValue)
                                                {
                                                    <span class="badge bg-success">@item.Grade.Value.ToString("F1")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa có điểm</span>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    var statusClass = item.Status switch
                                                    {
                                                        "Active" => "bg-primary",
                                                        "Completed" => "bg-success",
                                                        "Withdrawn" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @statusClass">@item.Status</span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-danger" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">Chưa có đăng ký nào</h4>
                            <p class="text-muted">Hãy thêm đăng ký đầu tiên để bắt đầu quản lý.</p>
                            <a asp-action="Create" class="btn btn-warning">
                                <i class="fas fa-plus"></i> Thêm Đăng ký Đầu tiên
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide success message after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
