@model Pta_231220711_DE01.Models.PtaComputer
@{
    ViewData["Title"] = "Xóa máy tính";
}

<h2>Xóa máy tính</h2>

<h3>Bạn có chắc chắn muốn xóa máy tính này?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>Tên máy tính:</dt>
        <dd>@Model.PtaComName</dd>
        
        <dt>Giá:</dt>
        <dd>@Model.PtaComPrice.ToString("N0") VNĐ</dd>
        
        <dt>Hình ảnh:</dt>
        <dd>@Model.PtaComImage</dd>
        
        <dt>Trạng thái:</dt>
        <dd>@(Model.PtaStatus ? "Còn hàng" : "Hết hàng")</dd>
    </dl>
    
    <form asp-action="PtaDelete">
        <input type="hidden" asp-for="PtaComId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="PtaIndex" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
