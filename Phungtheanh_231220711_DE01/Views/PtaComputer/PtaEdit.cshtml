@model Pta_231220711_DE01.Models.PtaComputer
@{
    ViewData["Title"] = "Sửa thông tin máy tính";
}

<h2>Sửa thông tin máy tính</h2>

<form asp-action="PtaEdit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="PtaComId" />
    
    <div class="form-group">
        <label asp-for="PtaComName" class="control-label">Tên máy tính</label>
        <input asp-for="PtaComName" class="form-control" />
        <span asp-validation-for="PtaComName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="PtaComPrice" class="control-label">Giá</label>
        <input asp-for="PtaComPrice" class="form-control" />
        <span asp-validation-for="PtaComPrice" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="PtaComImage" class="control-label">Hình ảnh</label>
        <input asp-for="PtaComImage" class="form-control" />
        <span asp-validation-for="PtaComImage" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <div class="form-check">
            <input asp-for="PtaStatus" class="form-check-input" />
            <label asp-for="PtaStatus" class="form-check-label">Còn hàng</label>
        </div>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a asp-action="PtaIndex" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
